---
import { getCollection } from "astro:content";
import TagList from "../TagList.astro";

const entries = await getCollection("posts");
---

<section class="space-y-10">
  {
    entries.map((entry, i) => (
      <div class="grid grid-cols-[auto_1fr_auto] grid-rows-[auto_auto] gap-x-4 gap-y-1 max-sm:grid-cols-[auto_auto] max-sm:grid-rows-[repeat(4,auto)]">
        <span class="row-span-2 row-start-1 self-center text-3xl text-blue-200 max-sm:row-span-4">
          {i.toString().padStart(2, "0")}
        </span>

        <h2 class="font-heading text-2xl font-medium text-gray-100 max-sm:truncate sm:whitespace-nowrap">
          {entry.data.title}
        </h2>

        <TagList tags={entry.data.tags} />

        <span class="truncate">{entry.data.description}</span>

        <a
          href={`/blog/${entry.slug}`}
          class="highlighted w-fit sm:justify-self-end"
        >
          Read more...
        </a>
      </div>
    ))
  }
</section>
