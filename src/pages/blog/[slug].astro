---
import Highlighted from "@/components/content/Highlighted.astro";
import Blockqoute from "@/components/content/Blockqoute.astro";
import PostLayout from "@/layouts/PostLayout.astro";
import Code from "@/components/content/Code.astro";

import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import Preformatted from "@/components/content/Preformatted.astro";

export async function getStaticPaths() {
  const pageEntries = await getCollection("posts");

  return pageEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

type Props = {
  entry: CollectionEntry<"posts">;
};

const { entry } = Astro.props;
const { Content } = await entry.render();

const components = {
  strong: Highlighted,
  blockquote: Blockqoute,
  pre: Preformatted,
  code: Code,
};
---

<PostLayout {...entry.data}>
  <Content {components} />
</PostLayout>
