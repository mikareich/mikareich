---
import Highlighted from "@/components/content/Highlighted.astro";
import Blockqoute from "@/components/content/Blockqoute.astro";
import PostLayout from "@/layouts/PostLayout.astro";
import Code from "@/components/content/Code.astro";

import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import Preformatted from "@/components/content/Preformatted.astro";
import React from "react";
import { headingFactory } from "@/components/content/headingFactory";

export async function getStaticPaths() {
  const pageEntries = await getCollection("posts");

  return pageEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

type Props = {
  entry: CollectionEntry<"posts">;
};

const { entry } = Astro.props;
const { Content, headings } = await entry.render();

const components = {
  strong: Highlighted,
  blockquote: Blockqoute,
  pre: Preformatted,
  code: Code,
  h1: headingFactory(1, headings),
  h2: headingFactory(2, headings),
  h3: headingFactory(3, headings),
  h4: headingFactory(4, headings),
  h5: headingFactory(5, headings),
};

const layoutProps = { ...entry.data, headings, id: entry.id };
---

<PostLayout {...layoutProps}>
  <Content {components} />
</PostLayout>
