---
import Skill from "@/components/Skill.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { skills } from "@/lib/utils";

const page = {
  seo: {
    title: "About me",
  },
  hero: {
    title: "Hey, I'm Mika",
    subtitle: "Student & programming enthusiast",
    image: "/images/avatar.svg",
  },
};
---

<BaseLayout {...page}>
  <p class="large">
    Hi, I'm Mika Reich, an 19-year-old student from Germany. I've been coding <span
      class="highlighted">since I was 12</span
    >, working on <span class="highlighted">web applications</span> and exploring
    <span class="highlighted">different technologies.</span> From front-end to back-end,
    I've delved into various aspects of development, always eager to learn and take
    on new challenges. Below, you'll find an overview of the skills I've developed
    and perfected over the years:
  </p>

  <section class="flex flex-wrap gap-8 line-clamp-5">
    {skills.map((skill) => <Skill skill={skill} size="large" />)}
    <spa class="small my-auto">And many more...</spa>
  </section>
</BaseLayout>
